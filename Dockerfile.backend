# Backend Dockerfile - simplified for self-hosting
FROM python:3.12-slim

WORKDIR /app

# Install dependencies
COPY backend/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy backend code
COPY backend/ .

# Persistent storage for ChromaDB (mount as volume)
VOLUME /app/channel_chroma_db

EXPOSE 8000

CMD ["python", "server.py"]
